<form class="form-horizontal" name="employeeForm" novalidate>
    <fieldset>
        <div class="form-group" show-errors>
            <label for="nameField" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nameField" placeholder="Name ..." ng-model="name" name="name" ng-required="true" ng-maxlength="20">
                <span class="help-block" ng-if="vendorForm.name.$error.required">Name is required</span>
                <span class="help-block" ng-if="vendorForm.name.$error.maxlength">Name is too long</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-primary" ng-click="saveChanges()">Save Changes</button>
                <button type="button" class="btn btn-default" ng-click="cancel()">Cancel</button>
            </div>
        </div>
    </fieldset>
</form>

